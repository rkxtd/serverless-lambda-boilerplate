{
  "name": "serverless-lambda-boilerplate",
  "version": "0.3.0",
  "description": "boilerplate for creating serverless microservices with serverless framework and aws lambda. es6 with babel transpiler, and mocha unit tests runner",
  "main": "index.js",
  "url": "git@github.com:xcomanche/serverless-lambda-boilerplate.git",
  "directories": {
    "doc": "doc",
    "build": "build"
  },
  "scripts": {
    "clean": "rm -rf ./build && mkdir ./build",
    "test": "./node_modules/.bin/mocha --compilers js:babel-core/register tests/**",
    "build:app": "./node_modules/.bin/babel src --out-dir build/",
    "deploy:app": "(cd build && ../node_modules/.bin/serverless deploy --region eu-west-1)",
    "build:doc": "node ./scripts/generateApidocConfig.js && ./node_modules/.bin/apidoc -i src -o doc",
    "deploy:doc": "node ./scripts/deployToS3.js",
    "redeploy": "npm run clean && cp src/config.js build/ && cp src/serverless.yml build/ && npm run build:app && npm run deploy:app && npm run build:doc && npm run deploy:doc"
  },
  "author": "Roman Shuvaryk <xcomanche@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "apidoc": "^0.17.5",
    "aws-sdk-mock": "^1.6.1",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-preset-babili": "0.0.11",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-minify": "0.0.0",
    "chai": "^3.5.0",
    "jsonfile": "^2.4.0",
    "lambda-tester": "^2.7.0",
    "mocha": "^3.2.0",
    "mock-require": "^2.0.1",
    "require-reload": "^0.2.2",
    "serverless": "^1.8.0"
  },
  "dependencies": {
    "aws-sdk": "^2.16.0",
    "babel-polyfill": "^6.23.0",
    "s3": "^4.4.0",
    "uuid": "3.0.0"
  }
}
